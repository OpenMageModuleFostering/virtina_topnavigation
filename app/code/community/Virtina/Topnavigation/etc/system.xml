<config>
    <tabs>
        <virtina_extensions translate="label" module="topnavigation">
            <label>Virtina Extensions</label>
            <sort_order>100</sort_order>
        </virtina_extensions>
    </tabs>
    <sections>
        <topnavigation>
            <label>Top Navigation Menu</label>
            <tab>virtina_extensions</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
 
            <groups>
                <general translate="label" module="topnavigation">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
 
                    <fields>
                        <include_jquery translate="label">
                            <label>Include jQuery Library </label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </include_jquery>		
                        <topmenu translate="label">
                            <label>Enable Custom Top Menu </label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </topmenu>                        				                      
                        <iconimg translate="label">
                            <label>Enable Icon Image For Navigation Menu</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </iconimg>

                    </fields>
                </general>                            
            </groups>
        </topnavigation>
    </sections>
</config>
